[scripts]
##  Server
dev_django = "python ./django/manage.py runserver"
dev_aiohttp = 'python ./media/server.py'
## Prod servers
prod_uvicorn = "gunicorn django.core.asgi:application -w 4 -k uvicorn.workers.UvicornWorker" # For linux only
prod_aiohttp = "gunicorn aiohttp.server:aiohttp_app -w 4 --bind localhost:8001 --worker-class aiohttp.GunicornUVLoopWebWorker" # We want to run this without any proxy or anything
##  Migrations
sync = "python ./django/manage.py migrate"
mksync = "python ./django/manage.py makemigrations"
## Task queue
